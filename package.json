{
  "name": "ack-pug-bundler",
  "version": "1.3.10",
  "description": "Watch and bundle pug/jade files into .js files for importing into Javascript",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "bin": {
    "ack-pug-bundler": "./cli.js"
  },
  "dependencies": {
    "ack-path": "^1.5.2",
    "pug": "^2.0.0-beta.12",
    "watch": "^0.19.3",
    "marked": "^0.3.6"
  },
  "devDependencies": {
    "mocha": "^2.5.3"
  },
  "scripts": {
    "test": "mocha test/cases/ --recursive",
    "test:watch": "mocha test/cases/ --recursive --watch",
    "watch:test": "node ./test/watch-test",
    "build:test": "node ./test/build-test",
    "test:htmls": "node cli test/src/htmls/ test/result-js-files/htmls/ --includeHtmls --oneToOne --outType ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AckerApple/ack-pug-bundler.git"
  },
  "keywords": [
    "pug",
    "jade",
    "templates"
  ],
  "author": "Acker Apple",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AckerApple/ack-pug-bundler/issues"
  },
  "homepage": "https://github.com/AckerApple/ack-pug-bundler#readme"
}
